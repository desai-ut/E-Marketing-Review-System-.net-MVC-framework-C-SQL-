<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="@Url.Action("Index", "Home")" class="logo pull-left">
                <img src="~/Contents/assets/images/Logo.png"
                    height="54"
                    alt="Survey Pro"
                    class="appear-animation bounceIn appear-animation-visible"
                    data-appear-animation="bounceIn" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Recover Password</h2>
                </div>
                <div class="panel-body">
                    <div class="alert alert-info">
                        <p class="m-none text-semibold h6">Enter your e-mail below and we will send you reset instructions!</p>
                    </div>

                    @using (Html.BeginForm("RecoverPassword", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group mb-none">
                            <div class="input-group">
                                @Html.TextBox("Email", null,
                                new
                                {
                                    @class = "form-control input-lg",
                                    required = true,
                                    placeholder = "Enter Your Registered Email-Id",
                                    pattern = "[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\\.[a-z]{2,4}$"
                                })
                                <span class="input-group-btn">
                                    @Html.TextBox("btnreset", "Reset",
                                    new
                                    {
                                        @class = "btn btn-primary btn-lg",
                                        type = "Submit"
                                    })
                                </span>
                            </div>
                            @if (Session["Invalid"] == "1")
                            {
                                <h6 style="color: red;">@ViewBag.Invalid</h6>
                            }
                            <div class="input-group" align="center">
                                @Html.MathCaptcha()
                                <h6 style="color: red;">@ViewBag.Error</h6>
                            </div>
                        </div>

                        <p class="text-center mt-lg">
                            Remembered? <a href="@Url.Action("SignIn", "Home")">Sign In!</a>
                        </p>
                    }
                </div>
            </div>

            <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2017. All Rights Reserved.</p>
        </div>
    </section>
    <!-- end: page -->

    <!-- Vendor -->
