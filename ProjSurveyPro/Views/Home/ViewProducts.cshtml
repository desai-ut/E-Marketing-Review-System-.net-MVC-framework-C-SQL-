@{
    ViewBag.Title = "ViewProducts";
    Layout = "~/Views/Master/IndexLayout.cshtml";
}

<div role="main" class="main shop">
    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="active">Products</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h1>Products</h1>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <ul id="portfolioPaginationFilter" class="nav nav-pills sort-source" data-sort-id="portfolio" data-option-key="filter" data-plugin-options='{"layoutMode": "fitRows"}'>
            <li data-option-value="*" class="active"><a href="#">Show All</a></li>
        </ul>

        <hr>
        <div class="row">
            <div class="sort-destination-loader sort-destination-loader-showing">
                <ul id="portfolioPaginationWrapper" class="portfolio-list sort-destination" data-sort-id="portfolio" data-items-per-page="8">
                    @if (ViewBag.Products != null)
                    {
                        foreach (var item in ViewBag.Products)
                        {
                        <li class="col-md-3 col-sm-6 col-xs-12 isotope-item brands">
                            <div class="portfolio-item">
                                <a href="@Url.Action("ProductDetails", "Home", new { PID = item.ProductID, CID = item.ClientID })">
                                    <span class="thumb-info thumb-info-lighten">
                                        <span class="thumb-info-wrapper">
                                            <img src="@Url.Content(item.ProductImage1)" class="img-responsive" alt="">
                                            <span class="thumb-info-title">
                                                <span class="thumb-info-inner">@Html.Raw(item.ProductName)</span>
                                            </span>
                                            @*<span class="thumb-info-action">
                                        <span class="thumb-info-action-icon"><i class="fa fa-link"></i></span>
                                    </span>*@
                                        </span>
                                    </span>
                                </a>
                            </div>
                        </li>
                        }
                    }
                    else
                    {
                        <div class="col-md-12">
                            <h6 style="color: red; text-align: center">No Product Available Currently.</h6>
                        </div>
                    }
                </ul>
            </div>
            <div class="col-md-12">
                <div id="portfolioPagination" class="pull-right"></div>
            </div>
        </div>
    </div>
</div>


