<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="@Url.Action("Index", "Home")" class="logo pull-left">
                <img src="~/Contents/assets/images/Logo.png"
                    height="54"
                    alt="Survey Pro"
                    class="appear-animation bounceIn appear-animation-visible"
                    data-appear-animation="bounceIn" />
            </a>
            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Sign In</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group mb-lg">
                            <label>Email</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBox("Email", null,
                                new
                                {
                                    @class = "form-control input-lg",
                                    required = true,
                                    placeholder = "Enter Your Registered Email-Id",
                                    pattern = "[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\\.[a-z]{2,4}$"
                                })
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Password</label>
                                <a href="@Url.Action("RecoverPassword", "Home")" class="pull-right">Lost Password?</a>
                            </div>
                            <div class="input-group input-group-icon">
                                @Html.TextBox("password", null,
                                new
                                {
                                    type = "password",
                                    @class = "form-control input-lg",
                                    placeholder = "Enter Your Password",
                                    required = true
                                })
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        if (Session["Invalid"] == "1")
                        {
                        <h6 style="color: red;">@ViewBag.Invalid</h6>
                        }
                        <div class="form-group mb-lg">
                            @*<div class="clearfix">
                                @Html.MathCaptcha()
                                <h6 style="color: red;">@ViewBag.Error</h6>
                            </div>*@
                                @Html.MathCaptcha()
                                <h6 style="color: red;">@ViewBag.Error</h6>
                        </div>
                        
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    @*<input id="RememberMe" name="rememberme" type="checkbox" />
                                    <label for="RememberMe">Remember Me</label>*@
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                @Html.TextBox("btnlogin", "SignIn", new { @class = "btn btn-primary hidden-xs", type = "Submit" })
                            </div>
                        </div>
                        
                        <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                            <span>or</span>
                        </span>

                        <p class="text-center">
                            Don't have an account yet?
                        </p>
                        <h5 class="title text-uppercase text-bold m-none" align="center">Sign Up!</h5>
                        <div class="mb-xs text-center">
                            <a class="mb-xs mt-xs mr-xs btn btn-primary" href="@Url.Action("UserSignUp", "Home")">As User </a>
                            <a class="mb-xs mt-xs mr-xs btn btn-primary" href="@Url.Action("CompanySignUp", "Home")">As Company </a>
                        </div> 
                    }
                </div>
            </div>

            <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2017. All Rights Reserved.</p>
        </div>
    </section>
    <!-- end: page -->

