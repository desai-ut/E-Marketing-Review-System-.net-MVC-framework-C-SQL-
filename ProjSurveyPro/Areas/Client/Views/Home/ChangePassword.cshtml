@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Master/ClientLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Change Password</h2>
    </header>
    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Change Password</h2>
            </header>
            <div class="panel-body">
                <section class="body-sign">
                    <div class="center-sign">
                        <div class="panel panel-sign">
                            <div class="panel-title-sign mt-xl text-right">
                                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Change Password</h2>
                            </div>
                            <div class="panel-body">
                                @using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.ValidationSummary(true)
                                    <div class="form-group mb-lg">
                                        <input type="password" class="form-control" placeholder="Old Password" name="Password" />
                                        @if (Session["password"] == "1")
                                        {
                                            <h6 style="color: red;">@ViewBag.Pass</h6>
                                        }
                                    </div>
                                    <div class="form-group mb-lg">
                                        <input type="password" class="form-control" placeholder="New Password" name="NewPassword" />
                                        @if (Session["password"] == "1")
                                        {
                                            <h6 style="color: red;">@ViewBag.NPass</h6>
                                        }
                                    </div>
                                    <div class="form-group mb-lg">
                                        <input type="password" class="form-control" placeholder="Confirm Password" name="ConfirmPassword" />
                                        @if (Session["password"] == "1")
                                        {
                                            <h6 style="color: red;">@ViewBag.CPass</h6>
                                        }
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-6 text-left">
                                        </div>
                                        <div class="col-xs-6 text-right">
                                            @Html.TextBox("btnSubmit", "Save", new { type = "submit", @class = "mb-xs mt-xs btn btn-primary" })
                                            <a href="@Url.Action("Index", "Home", new { area = "Client" })" id="btnSubmit" 
                                                    class="mb-xs mt-xs btn btn-primary" style="text-align: center;">Back</a>
                                        </div>
                                    </div>                     
                                }
                            </div>
                        </div>
                        <hr class="tell" />
                        <div class="row">
                            <div class="header-logo">
                                <div style="text-align: center;">
                                    <p>Powered By</p>
                                </div>
                                <div style="text-align: center;">
                                    <img src="~/Contents/appimg/FullLogo.png"
                                        width="120" height="80"
                                        alt="Survey Pro" />
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>
