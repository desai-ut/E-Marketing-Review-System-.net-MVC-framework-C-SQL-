@model IEnumerable<ProjSurveyPro.ProductMst>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Master/ClientLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>View Product</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Product</h2>
            </header>
            <div class="panel-body">
                <div class="row">
                    @*<div class="col-sm-6">*@
                    <div class="text-left mb-md">
                        <div class="btn-group" style="margin-left: 16px">
                            <a id="AddCategory" class="btn btn-primary hidden-xs" 
                            href="@Url.Action("AddProduct", "Home", new { area = "Client" })">Add <i class="fa fa-plus"></i></a>
                        </div>
                    </div>
                    @*</div>*@
                </div>
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th class="center hidden-phone">Product Image</th>
                            <th>Product Name</th>
                            <th>Model Name</th>
                            <th class="center hidden-phone">Price</th>
                            <th class="center hidden-phone">No of Survey Responce</th>
                            <th class="center hidden-phone">Action</th>
                        </tr>
                    </thead>
                    <tbody id="State">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    <img src="@Url.Content(item.ProductImage1)" height="50" width="50"/>
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.Raw(item.ProductName)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.ModelName)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.NoOfSurvey)
                                </td>
                                <td style="text-align: center">
                                    <a href="@Url.Action("UpdateProduct", "Home", new { PID = item.ProductID, CID = item.ClientID, area = "Client" })" 
                                           class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                    <a href="@Url.Action("AddSurveyQues", "Home", new { area = "Client", id = item.ProductID, TSA = item.TotalSurveyAmt, Status = "First" })"
                                      class="mb-xs mt-xs btn btn-primary">Add Survey</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>
