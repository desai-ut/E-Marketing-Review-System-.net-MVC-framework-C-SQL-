@{
    ViewBag.Title = "ReviewQuesGridReport";
    Layout = "~/Views/Master/ClientLayout.cshtml";
}
<section role="main" class="content-body">
    <header class="page-header">
        <h2>Review Answer Report</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <div class="panel-body">
                <div class="invoice">
                    <header class="clearfix">
                        <div class="row">
                            <div class="col-sm-6 mt-md">
                                <h2 class="h2 mt-none mb-sm text-dark text-bold">@ViewBag.ProductName</h2>
                                <h4 class="h4 m-none text-dark text-bold">@ViewBag.ModelName</h4>
                            </div>
                            <div class="col-sm-6 text-right mt-md mb-md">
                                <address class="ib mr-xlg">
                                    @ViewBag.CompName
                                    <br />
                                    @ViewBag.OwnerName
                                    <br />
                                    @ViewBag.ContactNo
                                    <br />
                                    @ViewBag.EmailID
                                </address>
                                <div class="ib">
                                    <img src="@Url.Content(@ViewBag.CompanyLogo)" alt="CompanyLogo" width="100" style="height:100px;"/>
                                </div>
                            </div>
                        </div>
                    </header>
                    <div class="row">
                        <div class="col-md-12">
                            <section class="panel">
                                <header class="panel-heading">
                                    <div class="panel-actions">
                                    </div>
                                    <h2 class="panel-title" style="text-align: center;">Question</h2>
                                </header>
                                <div class="panel-body" style="border: groove;">
                                    <div class="table-responsive">
                                        <table class="table table-bordered mb-none">
                                            <thead>
                                                <tr>
                                                    <h3 style="font-weight: 600; color: indianred;">@Html.Raw(ViewBag.Question)</h3>
                                                </tr>
                                            </thead>
                                            @if (ViewBag.ReviewQuesGridReport != null)
                                            {
                                                foreach (var item in ViewBag.ReviewQuesGridReport)
                                                {
                                                <tbody>
                                                    <p>&nbsp &nbsp Ans.:-&nbsp @item.Answer</p>
                                                </tbody>
                                                }
                                            }

                                            else
                                            {
                                                <p>No details found.........</p>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <div class="text-center mr-lg" style="margin-left: 40px;">
                    <div class="text-Center mr-lg">
                        <a href="@Url.Action("ReviewQuesReport", "Home", new { area = "Client", SID = ViewBag.SurveyID })" 
                    id="btnSubmit"class="mb-xs mt-xs btn btn-primary" style="text-align: center;">Back</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="header-logo">
                            <div style="text-align: center;">
                                <p>Powered By</p>
                            </div>
                            <div style="text-align: center;">
                                <img src="~/Contents/appimg/FullLogo.png"
                                    width="120" height="80"
                                    alt="Survey Pro" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- End: Page -->
</section>
