@model IEnumerable<ProjSurveyPro.SurveyMst>
@{
    ViewBag.Title = "ProductIsPublish";
    Layout = "~/Views/Master/ClientLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Publish Product</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Publish Product</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th class="center hidden-phone" width="200px">Product Image</th>
                            <th>Product Name</th>
                            <th class="center hidden-phone" width="300px">Total Survey Amount</th>
                            <th class="center hidden-phone" width="212px">Status</th>
                            <th class="center hidden-phone" width="90px">Action</th>
                        </tr>
                    </thead>
                    <tbody id="State">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    <img src="@Url.Content(item.ProductMst.ProductImage1)" height="50" width="50" />
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.Raw(item.ProductMst.ProductName)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.ProductMst.TotalSurveyAmt)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @{ var ActiveStatus = item.IsPublished;
                                       if (ActiveStatus == true)
                                       {
                                        <a href="@Url.Action("Publish", "Home", new { area = "Client", SID = item.SurveyID, Status = false })" class="mb-xs mt-xs btn btn-success">Active</a>
                                       }
                                       else
                                       {
                                        <a href="@Url.Action("Publish", "Home", new { area = "Client", SID = item.SurveyID, Status = true })" class="mb-xs mt-xs btn btn-danger">Publish</a>
                                       }
                                    }
                                </td>
                                <td style="text-align: center">
                                    <a href="@Url.Action("Productdetails", "Home", new { PID = item.ProductID, area = "Client" })" 
                                           class="btn btn-default"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>
