@model IEnumerable<ProjSurveyPro.ProductMst>
@{
    ViewBag.Title = "EWalletList";
    Layout = "~/Views/Master/UserLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Survey List</h2>
    </header>
    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Survey List</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th class="center hidden-phone" width="125px">Product Image</th>
                            <th width="160px">Product Name</th>
                            <th width="160px">Model Name</th>
                            <th class="center hidden-phone" width="150px">Reward Points</th>
                        </tr>
                    </thead>
                    <tbody id="State">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    <img src="@Url.Content(item.ProductImage1)" height="50" width="50"/>
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.Raw(item.ProductName)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.Raw(item.ModelName)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.Raw(item.SurveyRewardPoint)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</section>
