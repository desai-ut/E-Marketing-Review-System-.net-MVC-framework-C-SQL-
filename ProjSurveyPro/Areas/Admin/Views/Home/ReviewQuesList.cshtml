@model IEnumerable<ProjSurveyPro.ReviewQue>
@{
    ViewBag.Title = "ReviewQuesList";
    Layout = "~/Views/Master/AdminLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Show Survey</h2>
    </header>
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <div class="panel-body">
                <div class="invoice">
                    <header class="clearfix">
                        <div class="row">
                            <div class="col-sm-6 mt-md">
                                <h2 class="h2 mt-none mb-sm text-dark text-bold">@ViewBag.ProductName</h2>
                                <h4 class="h4 m-none text-dark text-bold">@ViewBag.ModelName</h4>
                            </div>
                            <div class="col-sm-6 text-right mt-md mb-md">
                                <address class="ib mr-xlg">
                                    @ViewBag.CompName
                                    @ViewBag.SurveyId
                                    @*@ViewBag.UserId*@
                                    <br />
                                    @ViewBag.OwnerName
                                    <br />
                                    @ViewBag.ContactNo
                                    <br />
                                    @ViewBag.EmailID
                                </address>
                                <div class="ib">
                                    <img src="@Url.Content(@ViewBag.CompanyLogo)" alt="CompanyLogo" width="100" style="height:100px;"/>
                                </div>
                            </div>
                        </div>
                    </header>
                    @foreach (var item in Model)
                    {
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-none">
                                        <tr>
                                            <td class="actions-hover actions-fade">
                                                <p style="font-size: large; color: red; text-align: center;">Question</p>
                                                @Html.Raw(item.Question)
                                                <br />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="text-center mr-lg" style="margin-left: 40px;" id="divSubmit">
                    <a href="@Url.Action("ActiveProduct", "Home", new { area = "Admin" })" id="btnSubmit" class="mb-xs mt-xs btn btn-primary" style="text-align: center;">Back</a>
                </div>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div class="header-logo">
                            <div style="text-align: center;">
                                <p>Powered By</p>
                            </div>
                            <div style="text-align: center;">
                                <img src="~/Contents/appimg/FullLogo.png"
                                    width="120" height="80"
                                    alt="Survey Pro" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
