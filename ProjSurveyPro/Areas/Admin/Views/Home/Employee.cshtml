@model IEnumerable<ProjSurveyPro.EmployeeMst>
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Master/AdminLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>View Employee</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Employee</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th class="center hidden-phone" width="212px">Employee Image</th>
                            <th>Name</th>
                            <th width="190px">Designation</th>
                            <th class="center hidden-phone" width="190px">Mobile No.</th>
                            <th width="190px">Email-ID</th>
                            <th class="center hidden-phone" width="212px">Action</th>
                        </tr>
                    </thead>
                    <tbody id="Employee">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    <img src="@Url.Content(item.EmpImage)" height="70" width="70" />
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.EmpName)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.MobileNo)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.EmailID)
                                </td>
                                <td style="text-align: center">
                                    @{ var ActiveStatus = item.IsActive;
                                       if (ActiveStatus == true)
                                       {
                                        <a href="@Url.Action("SetApproveEmployee", "Home",
                                    new { area = "Admin", EID = item.EmpID, Status = false })" class="mb-xs mt-xs btn btn-success">Active</a>
                                       }
                                       else
                                       {
                                        <a href="@Url.Action("SetApproveEmployee", "Home",
                                    new { area = "Admin", EID = item.EmpID, Status = true })" class="mb-xs mt-xs btn btn-danger">Approve</a>
                                       }
                                    }
                                    <a href="@Url.Action("EmployeeDetails", "Home", new { EID = item.EmpID, area = "Admin" })" 
                                           class="btn btn-default"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>

