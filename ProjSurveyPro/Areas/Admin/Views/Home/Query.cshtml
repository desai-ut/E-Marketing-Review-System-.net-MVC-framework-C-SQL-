@model IEnumerable<ProjSurveyPro.QueryMst>
@{
    ViewBag.Title = "Query";
    Layout = "~/Views/Master/AdminLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>View Queries</h2>
    </header>
    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">View Queries</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th class="center hidden-phone" width="350px">Query</th>
                            <th class="center hidden-phone" width="120px">Email-Id</th>
                            <th class="center hidden-phone" width="90px">Action</th>
                        </tr>
                    </thead>
                    <tbody id="State">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.QueryDisc)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.EmailID)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @{ var ActiveStatus = item.ReplyStatus;
                                       if (ActiveStatus == true)
                                       {
                                        <a href="@Url.Action("ReplyQuery", "Home",
                                    new { area = "Admin", QID = item.QueryID, Status = "Display" })" class="mb-xs mt-xs btn btn-success">Done</a>
                                       }
                                       else
                                       {
                                        <a href="@Url.Action("ReplyQuery", "Home",
                                    new { area = "Admin", QID = item.QueryID, Status = "Entry" })" class="mb-xs mt-xs btn btn-danger">Reply</a>
                                       }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>
