@model IEnumerable<ProjSurveyPro.UserMst>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Master/AdminLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Approve User</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Approve User</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th class="center hidden-phone">User Image</th>
                            <th class="center hidden-phone">User Name</th>
                            <th class="center hidden-phone" width="175px">Email-Id</th>
                            <th class="center hidden-phone" width="212px">Status</th>
                            <th class="center hidden-phone" width="125px">Action</th>
                        </tr>
                    </thead>
                    <tbody id="State">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    <img src="@Url.Content(item.UserImage)" height="70" width="70" />
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.EmailID)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    <a href="#" class="mb-xs mt-xs btn btn-success">Active</a>
                                </td>
                                <td style="text-align: center">
                                    <a href="@Url.Action("UserDetails", "Home", new { id = item.UserID, area = "Admin" })" 
                                           class="btn btn-default"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>

