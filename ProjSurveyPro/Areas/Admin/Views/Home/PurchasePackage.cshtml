@model IEnumerable<ProjSurveyPro.PurchasePackage>
@{
    ViewBag.Title = "PurchasePackage";
    Layout = "~/Views/Master/AdminLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Approve Purchase Package</h2>
    </header>
    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Purchase Package</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th>Package</th>
                            <th>Client</th>
                            <th class="center hidden-phone">Price</th>
                            <th class="center hidden-phone">Referal No</th>
                            <th>Paid Date</th>
                            <th class="center hidden-phone">Status</th>
                        </tr>
                    </thead>
                    <tbody id="State">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.PackageMst.PackageTitle)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.ClientMst.CompName)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.RefNo)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.PaidDate)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @{ var ActiveStatus = item.PaidStatus;
                                       if (ActiveStatus == true)
                                       {
                                        <a href="@Url.Action("SetPurchasePackage", "Home",
                                    new { area = "Admin", PCID = item.PurchaseID, Status = false, Duration = item.PackageMst.Duration })" 
                                        class="mb-xs mt-xs btn btn-success">Active</a>
                                       }
                                       else
                                       {
                                        <a href="@Url.Action("SetPurchasePackage", "Home",
                                    new { area = "Admin", PCID = item.PurchaseID, Status = true, Duration = item.PackageMst.Duration })" 
                                        class="mb-xs mt-xs btn btn-danger">Approve</a>
                                       }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>
