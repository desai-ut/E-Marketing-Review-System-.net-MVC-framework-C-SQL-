@model IEnumerable<ProjSurveyPro.PackageMst>
@{
    ViewBag.Title = "Package";
    Layout = "~/Views/Master/AdminLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>View package</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">Package</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th width="212px">PackageTitle</th>
                            <th class="center hidden-phone">Price</th>
                            <th class="center hidden-phone" width="190px">Duration (In Months)</th>
                            <th class="center hidden-phone" width="190px">No of Product</th>
                            <th class="center hidden-phone" width="190px">No of Response</th>
                            <th class="center hidden-phone" width="212px">Status</th>
                        </tr>
                    </thead>
                    <tbody id="Package">
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.PackageTitle)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.Duration)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.NoOfProduct)
                                </td>
                                <td style="padding-top: 3.5mm;" class="center hidden-phone">
                                    @Html.DisplayFor(modelItem => item.NoOfResponse)
                                </td>
                                <td style="text-align: center">
                                    @{ var ActiveStatus = item.IsActive;
                                       if (ActiveStatus == true)
                                       {
                                        <a href="@Url.Action("SetApprovePackage", "Home", new { area = "Admin", PID = item.PackageID, Status = false })"
                                         class="mb-xs mt-xs btn btn-success">Active</a>
                                       }
                                       else
                                       {
                                        <a href="@Url.Action("SetApprovePackage", "Home", new { area = "Admin", PID = item.PackageID, Status = true })"
                                         class="mb-xs mt-xs btn btn-danger">Approve</a>
                                       }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- end: page -->
</section>
