@{
    ViewBag.Title = "SurveyStatusReport";
    Layout = "~/Views/Master/EmployeeLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>System Analysis Report</h2>
    </header>

    <!-- start: page -->
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">System Analysis</h2>
            </header>
            <div class="panel-body">
                <div class="row">

                    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

                    <script type="text/javascript">
                        google.charts.load('current', { packages: ['corechart', 'bar'] });
                        google.charts.setOnLoadCallback(drawAnnotations);

                        function drawAnnotations() {

                            var data = google.visualization.arrayToDataTable([
                              ['Task', 'Hours per Day'],
                              ['Approved Survey',   @ViewBag.ApprovedSurvey],
                              ['Not Approved Survey',   @ViewBag.NotApprovedSurvey]
                            ]);

                            var options = {
                                title: 'SurveyPro Survey Count Chart',
                                'is3D': true,
                                'height': '600',
                                'width': '800'
                            };

                            var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
                            chart.draw(data, options);
                        }
                    </script>
                    <div id="chart_div" style="height: auto" align="center"></div>
                    <div class="row">
                        <div style="text-align: center;">
                            <br />
                            <a href="@Url.Action("Index", "Home", new { area = "Employee" })" id="btnSubmit" 
                                class="mb-xs mt-xs btn btn-primary" style="text-align: center;">Back</a>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="row">
                        <div class="header-logo">
                            <div style="text-align: center;">
                                <p>Powered By</p>
                            </div>
                            <div style="text-align: center;">
                                <img src="~/Contents/appimg/FullLogo.png"
                                    width="120" height="80"
                                    alt="Survey Pro" />
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end: page -->
            </div>
        </section>
    </div>
</section>

