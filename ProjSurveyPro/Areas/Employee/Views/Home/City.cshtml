@model IEnumerable<ProjSurveyPro.CityMst>
@{
    ViewBag.Title = "City";
    Layout = "~/Views/Master/EmployeeLayout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>View City</h2>
    </header>
    <div data-appear-animation="fadeInRight">
        <section class="panel" style="border: double;">
            <header class="panel-heading">
                <h2 class="panel-title" align="center">City</h2>
            </header>
            <div class="panel-body">
                <div class="row">
                    @Html.Label("State", null, new { @class = "col-sm-3 control-label text-right" })
                    <div class="col-sm-6">
                        <div class="mb-md">
                            @using (Html.BeginForm("City", "Home", new { area = "Employee" }, FormMethod.Post))
                            {
                                @Html.DropDownList("ddlState", (SelectList)ViewBag.SList, "- Select State -",
                            new { @class = "form-control mb-md", @onchange = "this.form.submit();" })
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    @*<div class="col-sm-6">*@
                        <div class="text-left mb-md">
                            <div class="btn-group" style="margin-left: 16px">
                                @if (ViewBag.Vis != "First")
                                {
                                    <a id="AddState" class="btn btn-primary hidden-xs"
                                 href="@Url.Action("AddCity", "Home", new { area = "Employee" })">Add <i class="fa fa-plus"></i></a>
                                }
                            </div>
                        </div>
                    @*</div>*@
                </div>
                <table class="table table-bordered table-striped mb-none" id="datatable-default">
                    <thead>
                        <tr>
                            <th width="40%">State</th>
                            <th width="40%">City</th>
                            @if (ViewBag.Vis != "First")
                            {
                                <th width="20%" style="text-align: center">Action</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.StateMst.StateName)
                                </td>
                                <td style="padding-top: 3.5mm;">
                                    @Html.DisplayFor(modelItem => item.CityName)
                                </td>
                                @if (ViewBag.Vis != "First")
                                {
                                    <td style="text-align: center">
                                        <a href="@Url.Action("AddCity", "Home", new { id = item.CityID, area = "Employee" })" 
                                           class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="tell" />
                <div class="row">
                    <div class="header-logo">
                        <div style="text-align: center;">
                            <p>Powered By</p>
                        </div>
                        <div style="text-align: center;">
                            <img src="~/Contents/appimg/FullLogo.png"
                                width="120" height="80"
                                alt="Survey Pro" />
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
